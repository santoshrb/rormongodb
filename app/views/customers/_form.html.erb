<%= form_for(customer) do |f| %>
  <div class="field">
    <%= f.label :cust_name %>
    <%= f.text_field :cust_name %> 
  </div>

  <div class="field">
    <%= f.label :adress %>
    <%= f.text_area :adress %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.number_field :phone %>
  </div>

  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>